<Window x:Class="WpfBoodschappenlijst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBoodschappenlijst"
        mc:Ignorable="d"
        Title="Boodschappen" Height="240" Width="350">
    <Grid Background="#FFEDF1C0" Margin="0,0,-6.6,-3.2">
        <ListBox x:Name="lstProducts" SelectionMode="Multiple" HorizontalAlignment="Left" Height="115" Margin="18,19,0,0" VerticalAlignment="Top" Width="197" SelectionChanged="lstProducts_SelectionChanged">
            <ListBoxItem Content="brood"/>
            <ListBoxItem Content="melk"/>
            <ListBoxItem Content="kaas"/>
            <ListBoxItem Content="olijven"/>
            <ListBoxItem Content="appels"/>
        </ListBox>
        <Label x:Name="lblGeselecteerd" Content="Je selecteerde: " HorizontalAlignment="Left" Margin="18,147,0,0" VerticalAlignment="Top" Height="31" Width="322"  />
    </Grid>
</Window>
