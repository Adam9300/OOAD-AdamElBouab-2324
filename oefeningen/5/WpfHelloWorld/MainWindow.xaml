<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="Hello World App" Height="192.4" Width="571.2">
    <Grid Margin="0,0,3.8,-0.6" Background="#FFF9EFD5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblHello" Content="Hallo! Hoe is je naam?" HorizontalAlignment="Left" Height="29" Margin="40,42,0,0" VerticalAlignment="Top" Width="337" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtNaam" HorizontalAlignment="Left" Height="34" Margin="40,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="285" Grid.ColumnSpan="2"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" Height="34" Margin="51.8,88,0,0" VerticalAlignment="Top" Width="56" Click="btnOk_Click" Grid.Column="1"/>

    </Grid></Window>
